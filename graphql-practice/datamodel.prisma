type User {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateType!
  email: String @unique
  name: String!
  posts: [Post!]!
}

type Post {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateType!
  title: String!
  published: Boolean! @default(value: "false")
  author: User
  comments: [Comment!]!
}

type Comment {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateType!
  bodyText: String!
  createdBy: User!
}