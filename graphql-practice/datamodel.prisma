type User {
  id: ID! @unique
  email: String! @unique
  name: String
  posts: [Post!]!
}

type Post {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  published: Boolean! @default(value: "false")
  title: String!
  content: String
  author: User!
}

type Trails {
  id: ID! @unique
  name: String
  type: String
  summary: String
  difficulty: String
  location: String
  length: int
}